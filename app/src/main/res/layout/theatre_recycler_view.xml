<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/theatre_firstImageView"
        android:src="@drawable/nina"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/theatre_rightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/theatre_firstImageView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/theatre_firstImageView"
        android:fontFamily="@font/acme"
        android:text="ddddddd"

        android:textColor="#f3ffb6"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/theatre_secondImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/nina"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/theatre_firstImageView"
        android:layout_alignStart="@id/theatre_firstImageView"
        android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/theatre_belowSecondTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theatre_secondImageView"
        android:layout_alignStart="@id/theatre_secondImageView"
        android:layout_marginTop="40dp"
        android:text="asssa"
        android:fontFamily="@font/acme"
        android:layout_marginBottom="10dp"
        android:textColor="#f3ffb6"
        android:textSize="20sp"
        android:textStyle="bold|italic" />


    <ImageView
        android:id="@+id/theatre_thirdImageView"
        android:src="@drawable/nina"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/theatre_belowSecondTextView"
        android:layout_alignStart="@id/theatre_belowSecondTextView"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/theatre_fourthImageView"
        android:src="@drawable/nina"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/theatre_thirdImageView"
        android:layout_alignStart="@id/theatre_thirdImageView"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
