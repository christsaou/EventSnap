<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paris_vertical_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_grad">

    <RelativeLayout
        android:id="@+id/data_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252">


        <ImageView
            android:id="@+id/img2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:padding="2dp"
            app:srcCompat="@drawable/nina" />

        <TextView
            android:id="@+id/who2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img2"
            android:fontFamily="@font/abril_fatface"
            android:shadowColor="#060612"
            android:textColor="#351431"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="WHO: NINA KRAVIZ " />

        <TextView
            android:id="@+id/where2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/who2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img2"
            android:fontFamily="@font/abril_fatface"
            android:textColor="#FE840A"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="WHERE: Live In Paris Event Center" />

        <TextView
            android:id="@+id/when2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/where2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="52dp"
            android:layout_toRightOf="@id/img2"
            android:fontFamily="@font/abril_fatface"
            android:paddingLeft="10dp"
            android:textColor="#351431"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/where2"
            tools:text="WHEN: 15-10-2023" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/when2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="52dp"
            android:layout_toRightOf="@id/img2"
            android:fontFamily="@font/abril_fatface"
            android:paddingLeft="10dp"
            android:textColor="#FE840A"
            android:textSize="20sp"
            tools:text="Price:" />

        <TextView
            android:id="@+id/more_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img2"
            android:layout_marginLeft="-197dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img2"
            android:background="@drawable/custom_button_background"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:text="more info"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bookNow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img2"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="-23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/more_info_text"
            android:background="@drawable/main_button_custom"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Βοοκ Νοw!"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>







</RelativeLayout>




