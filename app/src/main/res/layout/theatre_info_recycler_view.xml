<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/theatre_info_imageView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/irwodou_atticu" />

    <ImageView
        android:id="@+id/theatre_info_imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/la_traviata" />

    <TextView
        android:id="@+id/theatre_info_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:lineSpacingMultiplier="1.5"
        android:fontFamily="@font/acme"
        android:textColor="#f3ffb6"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/theatre_info_bookNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:fontFamily="/acme"
        android:background="@drawable/custom_button_background"
        android:textColor="#f3ffb6"
        android:padding="20dp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
